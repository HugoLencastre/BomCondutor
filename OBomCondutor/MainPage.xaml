<Page
    x:Class="OBomCondutor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OBomCondutor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <SplitView x:Name="MainMenu" DisplayMode="CompactOverlay"  IsPaneOpen="False" CompactPaneLength="50" OpenPaneLength="150">
        <SplitView.Pane>
            <Grid Background="Green">
                <Button x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                    Width="50" Height="50" Background="Transparent" Click="ShowPanel_Click" VerticalAlignment="Top"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0 50 0 0">
                    <Button x:Name="Teste_Codigo" FontFamily="Segoe MDL2 Assets" Background="Transparent" Content="&#xE70F;" Click="Teste_Codigo_Click" Height="50" Width="50"  />
                    <TextBlock Text="Teste Código" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0 100 0 0">
                    <Button x:Name="Perfil" FontFamily="Segoe MDL2 Assets" Background="Transparent" Content="&#xE77B;" Click="Perfil_Click" Height="50" Width="50"  />
                    <TextBlock Text="Perfil" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0 150 0 0">
                    <Button x:Name="Biblioteca" FontFamily="Segoe MDL2 Assets" Background="Transparent" Content="&#xE8B7;" Click="Biblioteca_Click" Height="50" Width="50"  />
                    <TextBlock Text="Biblioteca" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" >
                    <Button x:Name="Settings" FontFamily="Segoe MDL2 Assets" Background="Transparent" Content="&#xE713;" Click="Settings_Click" Height="50" Width="50"  />
                    <TextBlock Text="Definições" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid x:Name="TelaPrincipal">
                <Image Source="Assets/background2.png" Stretch="UniformToFill" HorizontalAlignment="Center"/>
                <Viewbox>
                    <TextBlock Text="Passe no exame de código à primeira." 
                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                           FontFamily="Segoe UI" FontWeight="Bold" Foreground ="White" 
                           IsTextScaleFactorEnabled="True" TextWrapping="Wrap" Margin="10,0"/>
                </Viewbox>
                <Button x:Name="Teste_Codigo_Button" Background="Green" Content="Teste de Código" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0,0,0,80" Height="auto" Width="auto" MaxHeight="80" MaxWidth="150" />

                <CommandBar x:Name="CommandBar" IsOpen="False" VerticalAlignment="Bottom" Background="LightGray" IsSticky="True">
                    <AppBarButton Icon="Back" Label="Voltar" Background="Transparent" />
                    <AppBarButton Icon="Delete" Label="Cancelar" Background="Transparent" />
                    <AppBarButton Icon="Accept" Label="Confirmar" Background="Transparent" Click="Submit_Click"/>
                </CommandBar>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>